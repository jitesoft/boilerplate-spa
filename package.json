{
  "name": "boilerplate",
  "version": "1.0.0",
  "description": "Simple SPA boilerplate.",
  "author": "Johannes Tegn√©r <johannes@jitesoft.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "watch": "webpack-serve ./webpack/webpack.config-dev.js --open --hot --log-time",
    "build:dev": "webpack --config webpack/webpack.config-dev.js",
    "build:prod": "webpack -p --config webpack/webpack.config-prod.js",
    "test": "semistandard src/js && jest src/js"
  },
  "meta-tags": {
    "viewport": "width=device-width, initial-scale=1, shrink-to-fit=no",
    "keywords": "",
    "og:url": "",
    "og:image": "",
    "og:description": "",
    "og:title": "",
    "og:site_name": "",
    "og:see_also": "",
    "name": "",
    "description": "",
    "image": "",
    "favicon": "favicon.png",
    "twitter:card": "",
    "twitter:url": "",
    "twitter:description": "",
    "twitter:image": "",
    "robots": ""
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "parser": "babel-eslint",
    "env": {
      "browser": true
    },
    "extends": "semistandard"
  },
  "dependencies": {
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-loader": "^7.1.4",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "clean-webpack-plugin": "^0.1.19",
    "copy-webpack-plugin": "^4.5.1",
    "css-loader": "^0.28.11",
    "eslint": "^4.19.1",
    "html-webpack-plugin": "^3.2.0",
    "node-sass": "^4.9.0",
    "sass-loader": "^7.0.1",
    "style-loader": "^0.21.0",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.8.3",
    "webpack-cli": "^2.1.3",
    "webpack-merge": "^4.1.2"
  },
  "devDependencies": {
    "jest": "^22.4.4",
    "semistandard": "^12.0.1",
    "webpack-hot-client": "^3.0.0",
    "webpack-serve": "^1.0.2"
  }
}
